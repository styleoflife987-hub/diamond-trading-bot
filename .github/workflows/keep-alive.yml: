name: Keep Bot Alive

on:
  schedule:
    # Run every 10 minutes
    - cron: '*/10 * * * *'
  workflow_dispatch:

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Ping Render Service
        run: |
          curl -s -o /dev/null -w "%{http_code}" https://telegram-bot-6iil.onrender.com/health
          echo " - Service pinged at $(date)"
